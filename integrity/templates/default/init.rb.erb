$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), "lib"))

require 'rubygems'
require "integrity"

Integrity.configure do |c|
  c.database  "sqlite3:integrity.db"
  c.directory "builds"
  c.base_url  "http://<%= @base_url %>"
  c.log       "integrity.log"
  c.builder   :threaded, 5
  c.user "<%= @user %>"
  c.pass "<%= @password %>"
  c.github "<%= @token %>"
  c.build_all!
end